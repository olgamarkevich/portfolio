.icon-bg-gh {
    width: 28px;
    height: 28px;
    cursor: pointer;
    background: svg-load('github.svg', fill=$text-color, width=100%, height=100%);

    &:hover {
        background: svg-load('github.svg', fill=$text-color-hover, width=100%, height=100%);
    }
}

.icon-bg-vk {
    width: 28px;
    height: 28px;
    cursor: pointer;
    background: svg-load('vk.svg', fill=$text-color, width=100%, height=100%);

    &:hover {
        background: svg-load('vk.svg', fill=$text-color-hover, width=100%, height=100%);
    }
}

.icon-bg-insta {
    width: 28px;
    height: 28px;
    cursor: pointer;
    background: svg-load('insta.svg', fill=$text-color, width=100%, height=100%);

    &:hover {
        background: svg-load('insta.svg', fill=$text-color-hover, width=100%, height=100%);
    }
